@{
}

@model Book 
<div class="card m-1 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>Price: $@Model.Price</small></span>
    </h4>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Classifcation: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>PageCount: @Model.PageCount</li>
    </ul>
    <form id=@Model.BookId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end rounded-pill">Add to Cart</button>
    </form>
</div>

